{
  "name": "barnbench",
  "productName": "BarnBench",
  "version": "1.0.0",
  "description": "A minimal macOS app for browsing and managing AI prompts stored as markdown files",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && electron .",
    "dev": "tsc --watch",
    "package": "tsc && electron-builder --mac"
  },
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.barnbench.app",
    "productName": "BarnBench",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    },
    "files": [
      "dist/**/*",
      "renderer/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
